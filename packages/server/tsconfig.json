{
  "ts-node": {
    "files": true
  },
  "include": ["**/*.ts"],
  "exclude": [".git", "node_modules"],
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
